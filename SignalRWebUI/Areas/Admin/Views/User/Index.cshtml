@model UserRoleDefinitionViewModel

@{
    ViewData["Title"] = "Kullanıcılar ve Rolleri";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h5>Sistem Rolleri</h5>
        <div class="row">
            @if (Model.UserDataList != null)
            {
                @if (Model.UserDataList.Count() > 0)
                {
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <div class="card-title">Sistem Rol Listesi</div>
                            </div>
                            <div class="card-body">
                                <div id="product-table-ajax">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th scope="col">Kullanıcı Adı</th>
                                                <th scope="col">Email</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.UserDataList)
                                            {
                                                <tr>
                                                    <td>@item.UserName</td>
                                                    <td>@item.Email</td>
                                                    <td>
                                                        <a href="/admin/user/update/@item.Id" class="btn btn-outline-info"><i class="la la-edit"></i></a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-info w-100 text-center">Henüz Kayıtlı Kullanıcı Bulunmuyor!</div>
                }
            }
            else
            {
                <div class="alert alert-info w-100 text-center">Henüz Kayıtlı Kullanıcı Bulunmuyor!</div>
            }
        </div>
    </div>
</div>