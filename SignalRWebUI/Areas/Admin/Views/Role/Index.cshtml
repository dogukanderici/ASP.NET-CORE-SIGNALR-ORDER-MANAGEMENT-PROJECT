@model RoleDefinitionViewModel

@{
    ViewData["Title"] = "Sistem Rolleri";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h5>Sistem Rolleri</h5>
        <div class="row">
            @if (Model.RoleDefinitionList != null)
            {
                @if (Model.RoleDefinitionList.Count() > 0)
                {
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <div class="card-title">Sistem Rol Listesi</div>
                            </div>
                            <div class="card-body">
                                <div id="product-table-ajax">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th scope="col">Rol Adı</th>
                                                @* <th></th> *@
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.RoleDefinitionList)
                                            {
                                                <tr>
                                                    <td>@item.Name</td>
                                                    @* <td>
                                        <a href="/admin/role/delete?id=@item.Id" class="btn btn-outline-danger"><i class="la la-trash"></i></a>
                                        <a href="/admin/role/update/@item.Id" class="btn btn-outline-info"><i class="la la-edit"></i></a>
                                        </td> *@
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-info w-100 text-center">Henüz Kayıtlı Rol Bulunmuyor!</div>
                }
                <a href="/admin/role/create" class="btn btn-success"><i class="la la-plus"></i> Yeni Rol Ekle</a>
            }
            else
            {
                <div class="alert alert-danger w-100 text-center">@Model.HttpResponseMessage !</div>
            }

        </div>
    </div>
</div>