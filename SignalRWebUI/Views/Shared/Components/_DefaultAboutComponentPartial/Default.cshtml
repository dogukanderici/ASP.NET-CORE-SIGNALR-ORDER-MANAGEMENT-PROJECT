@model DefaultAboutViewModel

<section class="about_section layout_padding">
    <div class="container  ">
        @if (Model.HttpResponseMessage == null)
        {
            foreach (var item in Model.ResultAbouts)
            {
                <div class="row">
                    <div class="col-md-6 ">
                        <div class="img-box">
                            <img src="~/asset/defaultimage/@item.ImageUrl" alt="about-image">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="detail-box">
                            <div class="heading_container">
                                <h2>
                                    @item.Title
                                </h2>
                            </div>
                            <p>
                                @item.Description
                            </p>
                            <a href="#">
                                Daha Fazla
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="row">
                <div class="col-md-12">
                    <p>@Model.HttpResponseMessage</p>
                </div>
            </div>
        }
    </div>
</section>
