@model DefaultTestimonialViewModel

<section class="client_section layout_padding-bottom">
    <div class="container">
        <div class="heading_container heading_center psudo_white_primary mb_45">
            <h2>
                Misafirlerimiz Bizim İçin Ne Dedi?
            </h2>
        </div>
        <div class="carousel-wrap row ">
            <div class="owl-carousel client_owl-carousel">
                @if (Model.HttpResponseMessage == null)
                {
                    @foreach (var item in Model.ResultTestimonials)
                    {
                        <div class="item">
                            <div class="box">
                                <div class="detail-box">
                                    <p>
                                        @item.Comment
                                    </p>
                                    <h6>
                                        @item.Name
                                    </h6>
                                    <p>
                                        @item.Title
                                    </p>
                                </div>
                                <div class="img-box">
                                    <img src="~/asset/defaultimage/@item.ImageUrl" alt="" class="box-img">
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="row">
                        <div class="col-md-12">
                            <p>@Model.HttpResponseMessage</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>